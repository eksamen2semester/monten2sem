
<div class="toggle-container">
    <span class="toggle-text left">cafe</span>
    <div class="toggle">
        <img src="img/toggle_kaffe_hvid.webp" alt="kaffekop" id="kaffekop">
        <img src="img/toggle_vin_rød.webp" alt="vinglas" id="vinglas">
    </div>
    <span class="toggle-text right">bar</span>
</div>

<style>

#kaffekop{
width: 26px;
height: auto;
z-index: 1;
display: inline;
position: relative;
display: inline;
left:9px;
}

#vinglas{
width: 12px;
height: auto;
z-index: 1;
position: relative;
display: inline;
top: 4px;
left: 80px;
}

.toggle-container{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;

}

.toggle-text {
    font-size: 30px;
    font-family: orator std;
    color: var(--sec-color);
}


.toggle{
    position: relative;
    height: 45px;
    width: 140px;
    border-radius: 100px;
    color: var(--primary-color);
    cursor: pointer;
    border: 2px solid var(--sec-color);
}



.toggle::before{
    content: '';
    position: absolute;
    height: 36px;
    width: 36px;
    background-color:var(--four-color);
    border-radius: 50%;
    top: 50%;
    left: 5px;
    transform: translateY(-50%);
    transition: all 0.4s ease-in-out;
}

.toggle.active::before{
    background-color: var(--sec-color);
    left: calc(100% - 36px - 5px);
}

</style>

<script>
//@ts-nocheck
const toggle = document.querySelector(".toggle");
var forsidepic = document.getElementById("forsidepic");
var logo = document.getElementById("logo");

//javascript skifter mellem dark og light mode

toggle.onclick = function() {
    document.body.classList.toggle("dark-theme");

    //her bruges funktionen til at skifte forsidebilledet ud, afhængigt af temaet
    //herunder bliver if-statement også brugt til at skifte menuen ud, afhængigt af

    if(document.body.classList.contains("dark-theme")) {
        forsidepic.src = "img/montvaskbeige.webp";
        document.querySelector(".light").style.display="none"
        document.querySelector(".dark").style.display="block"
        
    }else{
        forsidepic.src = "img/montvaskbrun.webp";
        document.querySelector(".dark").style.display="none"
        document.querySelector(".light").style.display="block"
    }

    
    //SKIFT LOGO UD AFHÆNGIGT AF TEMA
    if(document.body.classList.contains("dark-theme")){
        logo.src = "img/montenlogo_ny.webp"; 
    } else {
        logo.src = "img/logo.webp";
    }
    
};


toggle.addEventListener("click", () => toggle.classList.toggle("active"));





</script>