---
import Reservation from "./Reservation.astro";
import Burgermenu from "./Burgermenu.astro";
import Enda from "./Enda.astro";
---

<header>
  <div class="header">
    <div class="logo">
      <a href="/"> <img src="../img/logo.png" alt="logo" /></a>
    </div>
    <Reservation text="Reservation" />
    <Enda/>
    <Burgermenu />
  </div>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
  }

  .logo img {
    max-width: 80%;
  }
</style>
