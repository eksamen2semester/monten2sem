---
import Layout from "../layouts/Layout.astro"
---



<Layout>

<label class="switch">
    <input type="checkbox">
    <span class="slider round"></span>
  </label>
  
</Layout>
  <style>
 .switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
  
}


.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

/* The slider */
.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(four-color);
  transition: .4s;
  border: solid red;
}

.slider:before {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 3px;
  bottom: 3px;
  background-color: red;
  transition: .4s;
}

/* input:checked + .slider {
  background-color: #2196F3;
} */

input:checked + .slider:before {
  -ms-transform: translateX(26px);
  transform: translateX(26px);
}


.slider.round {
  border-radius: 34px;
}

.slider.round:before {
  border-radius: 50%;
}
  </style>