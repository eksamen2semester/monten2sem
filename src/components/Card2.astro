---
const { data } = Astro.props;
---

<article class="grid_1-1">
  <div class="info">
    <h2>{data.name}</h2>
    <p>{data.indhold}</p>
  </div>
  <div class="pris">
    <p>{data.pris}</p>
  </div>
</article>

<style>
  .grid_1-1 {
    display: flex;
    justify-content: space-between;
    margin: 2%;
  }

  h2 {
    font-family: Orator Std;
    font-weight: bold;
  }

  .info {
    max-width: 65ch;
    line-height: 30px;
  }

  .pris {
    min-width: 15ch;
    font-weight: bolder;
  }
</style>
