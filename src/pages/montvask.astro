  }

  .montmand {
    max-width: 100%;
    padding-left: 10%;
  }

  p {
    max-width: 65ch;
    padding-left: 20%;
  }

  .farvebane {
    background-color: #340000;
    margin-top: 10%;
    padding: 4%;
  }

  .kaffe {
    color: #f8f6e9;
    place-self: center;
