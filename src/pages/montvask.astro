    max-width: 65ch;
    line-height: 5ch;
    font-size: 150%;
  }

  .col2 {
  }

  @font-face {
    font-family: "rubik-doodle";
    src: url(../RubikDoodleShadow-Regular.ttf);
  }

  h2 {
    padding-left: 10%;
    font-family: rubik-doodle;
    font-size: 200%;
    margin-top: 10%;
  }
  .overskrift {
    display: flex;
    justify-content: center;
    margin: 10%;
    font-family: rubik-doodle;
    color: #ff020a;
    font-size: 250%;
    margin-top: -10%;
  }

  @media (max-width: 600px) {
    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1em;
    }

    .overskrift {
      font-size: 150%;
    }

    h2 {
      font-size: 150%;
      margin-bottom: 10%;
    }

    p {
      padding-left: 10%;
    }

    img {
