<style>
  /* img er billedet af håndtegnet illustration */
  img {
    max-width: 50%;
  }

  /* montvask er den håndtegnede illustration */
  .montvask {
    display: flex;
    justify-content: center;
    margin: 10%;
  }

  /* grid er brugt til info og med vaskemaskinerne */
  .grid_1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1em;
    justify-content: space-between;
  }

  .grid_1-1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 1em;
  }

  /* Billedet af manden og møntvask i info afsnittet */
  .montmand {
    max-width: 100%;
    padding-left: 10%;
    display: block;
  }

  /* p er kun brugt i info boksen */
  p {
    max-width: 65ch;
    padding-left: 24%;
    margin-top: 3%;
    color: #f8f6e9;
  }

  /* Den mørkebrune markering henover siden */
  .farvebane {
    background-color: #340000;
    margin-top: 5%;
    margin-bottom: 5%;
    padding: 4%;
  }

  /* teksten inde i den mørkebrune markering */
  .kaffe {
    color: #f8f6e9;
    place-self: center;
    margin-left: -20%;
    display: block;
    max-width: 65ch;
    line-height: 2ch;
    font-size: 200%;
  }

  /* teksten til vaskemaskinen */
  .vask {
    font-size: 180%;
    place-self: center;
    line-height: 2ch;
    margin-top: 10%;
    color: #340000;
    padding-left: 20%;
  }

  /* reservationsknappen  */
  .knap {
    place-self: center;
    margin-top: 10%;
  }

  /* farven på teksten til dropdown */
  .spørgsmål {
    color: #340000;
  }

  /* den mørkebrune boks omkring info */
  .col1 {
    background-color: #340000;
    border-radius: 3%;
  }

  /* placeringen af vaskemaine teksten */
  .col2 {
    padding-right: 32%;
  }

  /* layout af footer*/
  .footer {
    margin-top: 10%;
    margin: 5%;
  }

  /* dropdown menuen */
  .dropdown {
    display: inline-block;
    padding: 5% 25%;
  }

  /* knappen der hedder spørgsmål */
  .dropdown button {
    background-color: #f8f6e9;
    color: #340000;
    padding: 10px 10px;
    border: none;
    cursor: pointer;
    font-size: 200%;
    text-decoration: underline;
  }

  .dropdown a {
    display: block;
    color: black;
    text-decoration: none;
    padding: 10px 10px;
  }

  .dropdown .content {
    display: none;
    position: relative;
    background-color: #f8f6e9;
    min-width: 100px;
    box-shadow: 2px 2px 5px hsla(0, 0%, 0%, 0.8);
  }

  .spørgsmål {
    padding: 10%;
  }

  /* h2 er info  */
  h2 {
    padding-left: 12%;
    font-family: rubik-doodle;
    font-size: 300%;
    margin-top: 10%;
    margin-bottom: 2%;
  }

  /* h3 er prisliste og FAQ */
  h3 {
    font-size: 300%;
    padding-left: 11%;
    margin-top: 7%;
    margin-bottom: 3%;
  }

  /* overskriften møntvask */
  .overskrift {
    display: flex;
    justify-content: center;
    margin: 10%;
    font-family: rubik-doodle;
    color: #ff020a;
    font-size: 250%;
    margin-top: -10%;
  }

  @media (max-width: 600px) {
    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1em;
    }

    h1 {
      font-size: 180%;
    }

    h2 {
      font-size: 240%;
      margin-bottom: 5%;
      padding-left: 7%;
    }

    p {
      padding-left: 7%;
      margin-bottom: 5%;
      font-size: 110%;
    }

    img {
      max-width: 80%;
    }

    .montmand {
      max-width: 100%;
      display: block;
      place-self: center;
      padding-right: 7%;
      margin-top: 7%;
      margin-bottom: 7%;
    }

    .kaffe {
      margin-left: -10%;
      font-size: 150%;
      line-height: 2ch;
      margin-top: 5%;
    }

    .vask {
      line-height: 5ch;
      place-self: center;
      font-size: 150%;
      margin-top: 5%;
      padding-left: 40%;
    }

    h3 {
      font-size: 250%;
      margin-bottom: 5%;
      padding-left: 7%;
      margin-top: 10%;
    }

    .knap {
      margin-bottom: 2%;
      padding-left: 2%;
      margin-top: 5%;
    }

    .dropdown button {
      font-size: 150%;
      padding-left: 30%;
      line-height: 1ch;
      text-decoration: underline;
    }

    .dropdown .content {
      position: relative;
      display: none;
    }
  }
</style>
